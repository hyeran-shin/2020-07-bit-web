  <display-name>jblog_0318</display-name>
  
  <servlet>
  	<servlet-name>ServletController</servlet-name>
  	<servlet-class>com.bit.controller.ServletController</servlet-class>
  	<init-param>
  		<param-name>configName</param-name>
  		<param-value>bean.properties</param-value>
